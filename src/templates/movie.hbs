{{#each this}}
<li>
    <div class="card-link" data-id="{{id}}">
        <img src="https://image.tmdb.org/t/p/w300{{poster_path}}" alt="картинка фильма" width="280" data-id="{{id}}"
            class="film-img">
        <div class="descr">
            <h2 class="film-name">{{original_title}}</h2>
            <ul>
                <li class="film-genre">{{vote_average}} | </li>
                <li class="film-year">{{release_date}}</li>
            </ul>
        </div>
    </div>
</li>
{{/each}}